{% extends 'base.html.twig' %}



{% block title %}User list{% endblock %}
{% block head %} 
{% endblock %}
{% block body %}
   <link href="{{ asset('css/crm.css') }}" type="text/css" rel="stylesheet">
    <style>
    
   
        h1{
            text-align: center;
        }
       
    </style>
    {% include 'layout/navbar.html.twig'%}
    {% include ('flash-messages/flash-messages.html.twig') %}
    <div class="container">
            <h1 style = "margin-top: 20px;">Liste des utilisateurs</h1>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if app.user is defined %}
            <h3>Bonjour <span style="color: #5eb5e0">{{ app.user.firstName }} </span>Connecter !</h3>
        {% endif %}
            {% else %}
                <div class="alert alert-primary" role="alert">
                    Créer un compte ou connnectez vous pour faire des modifications !
                </div>
        {% endif %}
            <br>

            <a style = "margin-top : 20px;" href="{{ path('user-create') }}" class = "btn btn-success">Nouveau User </a>
            <table class="table table-striped table-bordered table-hover" style="margin-top: 20px;">
                <thead class="thead-dark" style="text-align: center;">
                <tr>
                    <th> Prénom </th>
                    <th> Nom </th>
                    <th> Email </th>
                    <th> Tag </th>
                    <th> Numéro de téléphone </th>
                    {% if is_granted("ROLE_USER") %}
                    <th> Actions </th>
                    {% endif %}

                    <!--  <th colspan="3"> Action</th> -->
                </tr>
                </thead>
                {# légèrement différent de php avec foreach userList as user #}
                <tbody>
                {% for user in user_list %}
                    <tr style = "text-align: center;">
                        <td>{{ user.firstName }} </td>
                        <td>{{  user.lastName|upper }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.tag }}</td>
                        <td>{{ user.phoneNumber }}</td>
                        {% if is_granted("ROLE_USER") %}
                        <td> 
                            <a title="Modifier cet utilisateur" href="{{ path('user_edit', {'id': user.id}) }}" class = "btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a> 
                            <a title="Supprimer cet utilisateur" href="{{ path('user_delete', {'id': user.id}) }}" class = "btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a> 
                        </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}